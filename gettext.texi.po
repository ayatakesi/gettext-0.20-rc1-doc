#, no-wrap
msgid "error \"file not found: $filename\"\n"
msgstr "error \"file not found: $filename\"\n"

#. type: enumerate
#: original_texis/gettext.texi:9631
msgid "is first transformed into"
msgstr "は最初に以下へ変換され"

